@page "{postId:int}"
@model EditModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container">
    <dib class="row justify-content-center">
        <h2 class="col-12 col-md-2 text-center">@ViewData["Title"]</h2>
        <div class="col-8">
            @await Html.PartialAsync("_PostForm", Model.Input)
            <form class="form-group" method="post" asp-page-handler="Delete" asp-route-postId="@Model.Id">
              <button type="submit" class="btn btn-danger">
                @* onclick="return confirm('Are you sure you want to delete this post?');" *@
                Delete
              </button>
            </form>
            <a class="btn btn-info mt-3" asp-page="/Post/Dashboard">Ok</a>
        </div>
    </dib>
</div>
